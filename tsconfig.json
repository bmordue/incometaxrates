{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [ "node" ],
    "resolveJsonModule": false,
    "allowJs": true,
    "outDir": "./built",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "exclude": [
    "**/*.test.ts",
    "jest.config.js"
  ]
}
